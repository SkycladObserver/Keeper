<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="@color/white"
    tools:context="com.example.skyclad.mysqltest.ItemInformationActivity">

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="TYPE"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/fTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_below="@+id/type"
        android:layout_marginTop="25dp"
        android:text="Title:"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/fDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="25dp"
        android:text="Description:"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/description"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/fDescription"
        android:layout_alignStart="@+id/fDescription"
        android:layout_below="@+id/fDescription"
        android:layout_marginTop="25dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        tools:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/fLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="25dp"
        android:text="Location"
        android:textColor="@color/colorPrimaryDark"
        tools:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/location"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/fLocation"
        android:layout_alignStart="@+id/fLocation"
        android:layout_below="@+id/fLocation"
        android:layout_marginTop="25dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/fTitle"
        android:layout_alignStart="@+id/fTitle"
        android:layout_below="@+id/fTitle"
        android:layout_marginTop="25dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/fTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_below="@+id/location"
        android:layout_marginTop="26dp"
        android:text="Time:"
        android:textColor="@color/colorPrimaryDark"
        tools:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/fPostedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time"
        android:layout_marginTop="25dp"
        android:text="Posted by:"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/femail"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fPostedAt"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/time"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/fTime"
        android:layout_alignBottom="@+id/fTime"
        android:layout_centerHorizontal="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/funame"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/femail"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

</RelativeLayout>